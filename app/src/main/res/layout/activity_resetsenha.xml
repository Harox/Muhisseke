<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="30dp">


        <TextView
        android:id="@+id/textView7"
        android:textColor="#C42178"
        android:textSize="24dp"
            android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EsquecÃ­ a Senha" />

        <EditText
            android:id="@+id/edtCelular"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="49dp"
            android:background="@drawable/edit_text_style"
            android:ems="10"
            android:hint="Celular"
            android:inputType="phone" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_marginBottom="26dp"
            android:text="Ou"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="303dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_style"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/btnRepor"
            android:layout_width="303dp"
            android:layout_gravity="center"
            android:layout_height="60dp"
            android:layout_marginBottom="67dp"
            android:background="@drawable/repor" />

        <TextView
        android:id="@+id/textView11"
        android:layout_width="303dp"
        android:layout_height="41dp"
        android:layout_marginTop="11dp"
        android:text="Precisamos apenas do seu email ou celular para podermos Redefinir." />

    </LinearLayout>

</ScrollView>
