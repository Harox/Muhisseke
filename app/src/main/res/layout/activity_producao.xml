<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:layout_margin="@dimen/fab_margin"
    android:orientation="vertical"
    tools:context="com.firedevz.sistemadegestaofinanceira.ProducaoActivity">

    ///Barra superior

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_style"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/rendimento_money" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/despesa_money" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtRendimento"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Rendimentos"
            android:textColor="#0DF65B"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDespesa"
            android:layout_width="150dp"
            android:layout_margin="3dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Despesas"
            android:textColor="#F80019"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnEntradas"

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="@dimen/fab_margin"
            android:layout_weight="1"
            android:background="@drawable/btn_rendimentos" />

        <Button
            android:id="@+id/btnDespesas"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="@dimen/fab_margin"
            android:layout_weight="1"
            android:background="@drawable/ic_des" />
    </LinearLayout>

</LinearLayout>
