<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_text_style"
    android:orientation="vertical"
    android:padding="10dp">

    <AutoCompleteTextView
        android:id="@+id/edtNomeCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/campo_curvo"
        android:ems="10"
        android:hint="Nome do Cliente"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtNuitCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/campo_curvo"
        android:ems="10"
        android:hint="NUIT"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtDesconto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/campo_curvo"
        android:ems="10"
        android:hint="Desconto %"
        android:inputType="textPersonName" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spnMetodoPagamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spnContaEntrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtIva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#EC5656"
            android:background="@drawable/edit_text_style"
            android:layout_weight="1"
            android:text="Iva: 17%" />

        <TextView
            android:id="@+id/txtValorIva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_style"
            android:text="Iva:" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtConta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:textColor="#C42178"
        android:background="@drawable/edit_text_style"
        android:text="Total:" />

</LinearLayout>